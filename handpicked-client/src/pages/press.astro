---
// src/pages/press.astro
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageMeta = {
  title: "Press & Media — Genie Coupons",
  description: "Download our logo and get in touch with Genie Coupons’s press team.",
};
---
<Base meta={pageMeta}>
  <Header />

  <main role="main" aria-labelledby="press-heading" class="container mx-auto px-4 py-12">
    <header id="press-heading" class="mb-8 text-center">
      <h1 class="site-hero">Press & Media</h1>
      <p class="mt-2 text-gray-500">Logos, boilerplate, and media contact — all in one place.</p>
    </header>

    <section class="card card-surface max-w-2xl mx-auto text-center py-10">
      <h2 class="section-heading mb-4">Media kit</h2>
      <p class="text-gray-700 mb-6">
        Genie Coupons helps shoppers find verified coupons and deals with an emphasis on trust and transparency.
      </p>
      <div class="flex flex-col gap-3">
        <a class="btn btn-primary" href="/assets/press/logo.svg" download>Download logo (SVG)</a>
        <a class="btn btn-outline" href="/assets/press/geniecoupons-media-kit.zip" download>Download full kit (ZIP)</a>
      </div>
    </section>

    <section class="card card-surface max-w-2xl mx-auto text-center py-10 mt-8">
      <h2 class="section-heading mb-4">Press contact</h2>
      <p class="text-gray-700 mb-4">
        For media inquiries, email us at:
      </p>
      <a
        href="mailto:press@geniecoupons.example"
        class="btn btn-primary"
      >
        press@geniecoupons.example
      </a>
    </section>
  </main>

  <Footer />
</Base>
